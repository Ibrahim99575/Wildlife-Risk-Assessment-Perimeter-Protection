# Environment Configuration
# Copy this file to .env and fill in your credentials

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_NUMBER=+1234567890

# Contact Numbers (comma-separated)
FARMER_NUMBERS=+1234567890,+0987654321
FOREST_NUMBERS=+1122334455

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password

# Contact Emails (comma-separated)
FARMER_EMAILS=farmer@example.com
FOREST_EMAILS=forest_officer@example.com

# Hugging Face API (Optional - for advanced AI features)
HUGGINGFACE_API_TOKEN=your_huggingface_token

# Camera Configuration
DEFAULT_CAMERA_ID=0
FRAME_WIDTH=1280
FRAME_HEIGHT=720

# Detection Configuration
CONFIDENCE_THRESHOLD=0.5
MIN_DISTANCE_ALERT=50
MAX_DISTANCE_TRACKING=500

# Recording Configuration
RECORDING_PATH=./recordings
MAX_RECORDING_SIZE_MB=1000

# Database Configuration
DATABASE_PATH=./database/wildlife_system.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=./logs/app.log
